{
  "name": "custconnect-backend",
  "version": "1.0.0",
  "description": "CustConnect Digital Student Hub - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:tsx": "tsx watch src/index.ts",
    "dev:node": "node --loader ts-node/esm src/index.ts",
    "dev:simple": "ts-node src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "verify:printer-role": "ts-node scripts/verify-printer-shop-role.ts"
  },
  "keywords": [
    "student",
    "university",
    "campus",
    "api"
  ],
  "author": "CustConnect Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "6.19.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "prisma": "6.19.2",
    "resend": "^6.9.2",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.4",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  }
