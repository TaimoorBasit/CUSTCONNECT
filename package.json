{
  "name": "custconnect",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "description": "Digital Student Hub - MVP web portal for university students",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=frontend",
    "install:all": "npm install --legacy-peer-deps",
    "test": "cd frontend && npm test && cd ../backend && npm test"
  },
  "keywords": [
    "student",
    "university",
    "social",
    "campus",
    "services"
  ],
  "dependencies": {
    "next": "15.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}